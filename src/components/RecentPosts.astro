---
import type { CollectionEntry } from 'astro:content';
import Icon from './Icon.astro';
import FormattedDate from './FormattedDate.astro';

interface Props {
	posts: CollectionEntry<'blog'>[];
}

const { posts } = Astro.props;
---

{posts.length > 0 && (
	<section aria-labelledby="recent-posts-heading" class="recent-posts">
		<h2 id="recent-posts-heading" class="section-title">Posts Recentes</h2>
		<ul class="posts-list">
			{posts.map((post) => (
				<li class="post-item">
					<a href={`/blog/${post.id}/`} class="post-link">
						<div class="post-info">
							<h3 class="post-title">{post.data.title}</h3>
							<p class="post-description">{post.data.description}</p>
							<FormattedDate date={post.data.pubDate} />
						</div>
						<Icon name="arrow-right" size={20} class="post-arrow" />
					</a>
				</li>
			))}
		</ul>
		<a href="/blog" class="view-all-link">Ver todos os posts â†’</a>
	</section>
)}

<style>
	.recent-posts {
		background: var(--bg-card);
		border: 1px solid var(--border-color);
		border-radius: 12px;
		padding: 2rem;
	}

	.section-title {
		font-size: 1.5rem;
		font-weight: 700;
		margin: 0 0 1.5rem 0;
		color: var(--text-primary);
		text-align: center;
	}

	.posts-list {
		list-style: none;
		padding: 0;
		margin: 0 0 1.5rem 0;
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.post-item {
		margin: 0;
	}

	.post-link {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 1.25rem;
		background: var(--bg-secondary);
		border: 1px solid var(--border-color);
		border-radius: 8px;
		text-decoration: none;
		color: var(--text-primary);
		transition: all 0.3s ease;
		gap: 1rem;
	}

	.post-link:hover {
		background: var(--bg-primary);
		border-color: var(--accent);
		transform: translateX(4px);
	}

	.post-link:hover :global(.post-arrow) {
		color: var(--accent);
		transform: translateX(4px);
	}

	.post-link:focus-visible {
		outline: 2px solid var(--accent);
		outline-offset: 2px;
	}

	.post-link:focus {
		outline: none;
	}

	.post-info {
		flex: 1;
	}

	.post-title {
		font-size: 1.1rem;
		font-weight: 600;
		margin: 0 0 0.5rem 0;
		color: var(--text-primary);
	}

	.post-description {
		font-size: 0.9rem;
		color: var(--text-secondary);
		margin: 0 0 0.5rem 0;
		line-height: 1.5;
	}

	.post-info :global(.post-date) {
		font-size: 0.85rem;
		color: var(--text-muted);
		font-style: italic;
	}

	:global(.post-arrow) {
		flex-shrink: 0;
		color: var(--text-secondary);
		transition: all 0.3s ease;
	}

	.view-all-link {
		display: block;
		text-align: center;
		color: var(--accent);
		text-decoration: none;
		font-weight: 600;
		font-size: 0.95rem;
		transition: color 0.3s ease;
	}

	.view-all-link:hover {
		color: var(--accent-hover);
		text-decoration: underline;
	}

	@media (max-width: 720px) {
		.recent-posts {
			padding: 1.5rem;
		}

		.section-title {
			font-size: 1.3rem;
		}

		.post-link {
			flex-direction: column;
			align-items: flex-start;
			padding: 1rem;
		}

		.post-link:hover {
			transform: none;
		}

		:global(.post-arrow) {
			align-self: flex-end;
		}

		.post-title {
			font-size: 1rem;
		}

		.post-description {
			font-size: 0.85rem;
		}
	}
</style>
