---
interface Props {
	date: Date;
	locale?: string;
}

const { date, locale = 'pt-BR' } = Astro.props;
const isoDate = date.toISOString();
const formattedDate = date.toLocaleDateString(locale, {
	year: 'numeric',
	month: 'short',
	day: 'numeric'
});
---

<time datetime={isoDate}>
	{formattedDate}
</time>
